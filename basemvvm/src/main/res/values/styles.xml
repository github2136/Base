<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BtnSmall" parent="Base.TextAppearance.AppCompat.Widget.Button.Inverse">
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/btn_small_ripple_bg</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BtnMedium" parent="Base.TextAppearance.AppCompat.Widget.Button.Inverse">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/btn_medium_ripple_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
